<p><strong>User: </strong>
	<%= @post.user.first_name %> <%= @post.user.last_name %></p>
<p><strong>Post: </strong>
	<%= @post.content %></p>
<p><strong>Comments:</strong> </p>
<% @post.comments.order('id').each do |comment| %>
  <p><%= link_to "#{comment.user.full_name}", user_path %>
  <%= comment.content %> 
  <% if current_user.id == comment.user_id%>
  	<%= link_to "Edit", edit_comment_path(comment)%>
  <%end%></p>
<% end %>

<p><%= link_to 'Add Comment', new_post_comment_path(@post.id) %></p>
<%= link_to 'Back', posts_path %>
<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Destroy', @post, :method => :delete, :confirm => "Are you sure?" %>
