
<h1> Edit Group </h1>

<p> Hi there</p>
<p>Edit your group, filthy animal</p>

<%= form_for @group do |f| %>
<p>
	<%= f.label :name %>
	<%= f.text_area :name %> 
</p>
<p>
	<%= f.label :description %>
	<%= f.text_area :description %> 
</p>
<%= f.submit %>
<% end %>


<br>
<% if current_user.id == @group.created_by %>
	<%= link_to 'Delete Group', @group, :method => :delete, :confirm => "Are you sure?" %>
<%end%>

<%= link_to 'Back', groups_path %>
